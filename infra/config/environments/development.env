# Development Environment Configuration
# CRM Microservices Platform

# Environment
ENVIRONMENT=development
SPRING_PROFILES_ACTIVE=dev

# Service Discovery
EUREKA_INSTANCE_HOSTNAME=localhost
EUREKA_INSTANCE_PREFER_IP_ADDRESS=false
EUREKA_CLIENT_SERVICE_URL_DEFAULTZONE=http://localhost:8761/eureka

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=crm_platform
DB_USERNAME=crm_user
DB_PASSWORD=crm_password
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=2000
REDIS_POOL_MAX_ACTIVE=8

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_GROUP_ID=crm-dev
KAFKA_AUTO_OFFSET_RESET=earliest
KAFKA_ENABLE_AUTO_COMMIT=true

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VIRTUAL_HOST=/

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_SCHEME=http
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Security Configuration
JWT_SECRET=dev-secret-key-change-in-production-very-long-secret-key-for-development
JWT_EXPIRATION=86400
JWT_REFRESH_EXPIRATION=604800
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# API Gateway Configuration
GATEWAY_RATE_LIMIT_ENABLED=false
GATEWAY_RATE_LIMIT_REQUESTS_PER_MINUTE=1000
GATEWAY_CIRCUIT_BREAKER_ENABLED=true
GATEWAY_CIRCUIT_BREAKER_FAILURE_THRESHOLD=50
GATEWAY_CIRCUIT_BREAKER_TIMEOUT=10000

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_CRM=DEBUG
LOG_LEVEL_SPRING=INFO
LOG_LEVEL_HIBERNATE=WARN
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_HISTORY=30

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_EXPORT_PROMETHEUS=true
TRACING_ENABLED=true
ZIPKIN_BASE_URL=http://localhost:9411

# Development Features
DEBUG_ENABLED=true
SWAGGER_ENABLED=true
H2_CONSOLE_ENABLED=false
ACTUATOR_ENDPOINTS_ENABLED=true
ACTUATOR_ENDPOINTS_EXPOSURE=health,info,metrics,prometheus

# File Storage Configuration
FILE_STORAGE_TYPE=local
FILE_STORAGE_PATH=./uploads
FILE_MAX_SIZE=10MB
FILE_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Email Configuration (Development - Console output)
EMAIL_ENABLED=false
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@crm-dev.local

# Cache Configuration
CACHE_TYPE=redis
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Performance Configuration
JVM_OPTS=-Xms256m -Xmx512m -XX:+UseG1GC
CONNECTION_POOL_SIZE=10
THREAD_POOL_SIZE=20

# Feature Flags
FEATURE_ANALYTICS_ENABLED=true
FEATURE_WORKFLOWS_ENABLED=true
FEATURE_CUSTOM_OBJECTS_ENABLED=true
FEATURE_ADVANCED_SEARCH_ENABLED=true
FEATURE_BULK_OPERATIONS_ENABLED=true

# Development Tools
HOT_RELOAD_ENABLED=true
AUTO_RESTART_ENABLED=true
LIVE_RELOAD_ENABLED=true