{
  "dashboard": {
    "id": null,
    "title": "CRM Security Metrics",
    "tags": ["crm", "security", "audit"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Authentication Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(crm_auth_logins_successful_total[5m])",
            "legendFormat": "Successful Logins"
          },
          {
            "expr": "rate(crm_auth_logins_failed_total[5m])",
            "legendFormat": "Failed Logins"
          }
        ],
        "yAxes": [
          {
            "label": "Events/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Security Alerts",
        "type": "stat",
        "targets": [
          {
            "expr": "crm_security_suspicious_activity_total",
            "legendFormat": "Suspicious Activity"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 10
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "JWT Token Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(crm_jwt_tokens_generated_total[5m])",
            "legendFormat": "Tokens Generated"
          },
          {
            "expr": "rate(crm_jwt_tokens_expired_total[5m])",
            "legendFormat": "Tokens Expired"
          },
          {
            "expr": "rate(crm_jwt_tokens_invalid_total[5m])",
            "legendFormat": "Invalid Tokens"
          }
        ],
        "yAxes": [
          {
            "label": "Tokens/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Active Sessions",
        "type": "stat",
        "targets": [
          {
            "expr": "crm_auth_sessions_active_current",
            "legendFormat": "Active Sessions"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "Account Security Status",
        "type": "graph",
        "targets": [
          {
            "expr": "crm_auth_accounts_locked_current",
            "legendFormat": "Locked Accounts"
          },
          {
            "expr": "rate(crm_auth_lockouts_total[1h])",
            "legendFormat": "Lockouts/hour"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "API Security Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(crm_auth_unauthorized_total[5m])",
            "legendFormat": "Unauthorized Access"
          },
          {
            "expr": "rate(crm_api_rate_limit_exceeded_total[5m])",
            "legendFormat": "Rate Limit Exceeded"
          }
        ],
        "yAxes": [
          {
            "label": "Events/sec"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Failed Login Rate (per minute)",
        "type": "stat",
        "targets": [
          {
            "expr": "crm_auth_failed_login_rate_per_minute",
            "legendFormat": "Failed Logins/min"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 8,
        "title": "Password Reset Requests",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(crm_auth_password_resets_total[1h])",
            "legendFormat": "Password Resets/hour"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 12,
          "x": 12,
          "y": 24
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}